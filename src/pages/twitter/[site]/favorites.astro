---
import Container from "../../../components/Container.astro";
import Layout from "../../../layouts/twitter/Layout.astro";
import Content from "./favorites";
import { getProvider } from "./route";

export const prerender = true;
export { getStaticPaths } from "./route";

const { site } = Astro.params;

const provider = getProvider(site!);
if (!provider) return Astro.redirect("/twitter");
---

<Layout title="Welcome to Twitter." />
<Container>
  <Content provider={provider!} client:only="react" />
</Container>
