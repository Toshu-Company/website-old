---
import Container from "../../components/Container.astro";
import Layout from "../../layouts/twitter/Layout.astro";
---

<Layout title="Welcome to Twitter." />
<Container>
  <div class="container">
    <a href="/twitter/twivideos">https://www.twi-videos.net/</a><br />
    <a href="/twitter/twivideo">https://twivideo.net/</a><br />
    <a href="/twitter/uraakalist">https://uraakalist.com/</a><br />
  </div>
</Container>

<style lang="scss">
  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
  }

  a {
    color: #333;
    margin: 10px;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    background: #fff;
    cursor: pointer;

    &:hover {
      background: #eee;
    }

    &:active {
      background: #ddd;
    }
  }
</style>
